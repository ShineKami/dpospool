<div class="container middle">
	<div class="pstat">
		<h1 class="page_title">Statistics</h1>
		<div class="row">
			<div class="col-md-8">
				<div class="box">
					<div class="row">
						<div class="col-md-6 col-sm-6">
							<div class="item">
								<span class="title">Network:</span>
								<br>{{network}}
							</div>
						</div>
						<div class="col-md-6 col-sm-6">
							<div class="item">
								<span class="title">Delegate name:</span>
								<br>{{username}}
							</div>
						</div>
						<div class="col-md-6 col-sm-6">
							<div class="item">
								<span class="title">Rank:</span>
								<br>#{{rank}}
							</div>
						</div>
						<div class="col-md-6 col-sm-6">
							<div class="item">
								<span class="title">Pool balance LSK:</span>
								<br>{{balance}} Ⱡ
							</div>
						</div>
						<div class="col-md-6 col-sm-6">
							<div class="item">
								<span class="title">Self vote:</span>
								<br>
								{{self_vote}} Ⱡ
							</div>
						</div>
						<div class="col-md-6 col-sm-6">
							<div class="item">
								<span class="title">Active voters:</span>
								<br>{{voters_count}}
							</div>
						</div>
						<div class="col-md-6 col-sm-6">
							<div class="item">
								<span class="title">Total supporting LSK:</span>
								<br>{{total_support}} Ⱡ
							</div>
						</div>
						<div class="col-md-6 col-sm-6">
							<div class="item">
								<span class="title">Vote capacity avail:</span>
								<br>
								{{vote_cap}}%
							</div>
						</div>
						<div class="col-md-12 col-sm-12">
							<div class="item">
								<span class="title">Delegate address:</span>
								<br>
								<a href="{{explorer_url}}" class="mark" target="_blank">{{address}}</a>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="col-md-4">
				<div class="box">
					<div class="pieChart" role="progressbar" data-goal="{{productivity}}">
						<div class="pie_progress__label">Productivity</div>
						<div class="pie_progress__number">0%</div>
					</div>
					<div class="forgStat">
						<div class="fb">{{forgedblocks}} Forged blocks</div>
						<div class="mb">{{missedblocks}} Missed blocks</div>
					</div>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-md-12">
				<div class="box box-tabs">
					<ul class="tabsbtn">
						<li class="active" data-tab="voters">Voters</li>
						<li data-tab="reward">Reward</li>
					</ul>
					<div class="tabs">
						<div class="tab" id="voters" style="display:block;">
							<div class="scroll_wrap">
								<table class="table">
									<thead>
										<tr class="tr_head">
											<th class="tr1">Name</th>
											<th class="tr2">Address</th>
											<th class="tr3">Balance</th>
											<th class="tr4">% of pool</th>
										</tr>
									</thead>
									<tbody>
										{{#each voters_list}}
											<tr class="tr_item">
												<td class="tr1"><div class="d-icon {{icon}}">{{username}}</div></td>
												<td class="tr2"><a href="{{explorer_url}}" target="_blank" title="{{username}}">{{address}}</a></td>
												<td class="tr3">{{vote}} Ⱡ</td>
												<td class="tr4">{{pool_percent}}%</td>
											</tr>
										{{/each}}
									</tbody>
								</table>
							</div>
							{{#if showmore}}
								<div class="showmore">Show more</div>
							{{/if}}
						</div>
						<div class="tab" id="reward">
							<div class="scroll_wrap">
								<table class="table">
									<thead>
										<tr class="tr_head">
											<th class="tr1">Address</th>
											<th class="tr3">Reward</th>
											<th class="tr3">All time</th>
										</tr>
									</thead>
									<tbody>
										{{#each voters_reward}}
											<tr class="tr_item">
												<td class="tr1"><div class="d-icon {{icon}}"><a href="/voter-stats/address/{{address}}" target="_blank" title="{{address}}">{{address}}</a></div></td>
												<td class="tr3">{{balance}} Ⱡ</td>
												<td class="tr3">{{total}} Ⱡ</td>
											</tr>
										{{/each}}
									</tbody>
								</table>
							</div>
							{{#if showmore}}
								<div class="showmore">Show more</div>
							{{/if}}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="clearfix"></div>
</div>